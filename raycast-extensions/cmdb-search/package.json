{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "search-cmdb",
  "title": "Search CMDB",
  "description": "Search CVTE IT CMDB",
  "icon": "command-icon.png",
  "author": "charliewei",
  "owner": "cvte",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search CVTE IT CMDB",
      "description": "Showing Search Results in CVTE IT CMDB",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "instance",
      "type": "textfield",
      "required": true,
      "title": "域名",
      "description": "CMDB系统内网访问域名",
      "default": "itsm.cvte.com",
      "placeholder": "CMDB内网访问域名"
    },
    {
      "name": "unsafeHttps",
      "type": "checkbox",
      "required": false,
      "title": "Unsafe HTTPS",
      "description": "不适用HTTPS访问",
      "default": false,
      "label": "Enable"
    },
    {
      "name": "token",
      "type": "password",
      "required": true,
      "title": "个人访问令牌",
      "description": "登录 https://itsm.cvte.com/secure/ViewProfile.jspa?selectedTab=com.atlassian.pats.pats-plugin:jira-user-personal-access-tokens 获取",
      "placeholder": "请录入个人访问令牌"
    },
    {
      "name": "schemaid",
      "type": "textfield",
      "required": true,
      "title": "架构ID",
      "description": "CMDB模型架构ID号",
      "default": "74",
      "placeholder": "CMDB内网访问域名"
    },
    {
      "name": "limit",
      "type": "textfield",
      "required": true,
      "title": "返回记录数",
      "description": "查询结果返回限制记录条数",
      "default": "26",
      "placeholder": "结果返回记录数"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.9",
    "build": "^0.1.4",
    "node-fetch": "^3.0.0",
    "prettier": "^2.5.1",
    "publish": "^0.6.0",
    "ray": "^0.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}