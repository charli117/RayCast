{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "kb-search",
  "title": "CVTE KB Search",
  "description": "Search through CVTE KB",
  "icon": "confluence-icon.png",
  "author": "charliewei",
  "owner": "cvte",
  "contributors": [
    "lr1980"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search CVTE KB",
      "subtitle": "kb",
      "description": "CVTE KB知识库快速检索服务",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "instanceType",
      "type": "dropdown",
      "required": true,
      "title": "认证方式",
      "description": "用户认证方式,内部系统仅允许单点登录",
      "data": [
        {
          "value": "on-premise",
          "title": "On-premise"
        }
      ]
    },
    {
      "name": "instance",
      "type": "textfield",
      "required": true,
      "title": "域名",
      "description": "KB系统内网访问域名",
      "default": "kb.cvte.com",
      "placeholder": "KB内网访问域名"
    },
    {
      "name": "unsafeHttps",
      "type": "checkbox",
      "required": false,
      "title": "Unsafe HTTPS",
      "description": "不适用HTTPS访问",
      "default": false,
      "label": "Enable"
    },
    {
      "name": "token",
      "type": "password",
      "required": true,
      "title": "个人访问令牌",
      "description": "登录 https://kb.cvte.com/plugins/personalaccesstokens/usertokens.action 获取",
      "placeholder": "请录入个人访问令牌"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.9",
    "build": "^0.1.4",
    "node-fetch": "^3.0.0",
    "prettier": "^2.5.1",
    "publish": "^0.6.0",
    "ray": "^0.0.1"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
